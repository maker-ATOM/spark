<launch>
    <arg name="map_file" default="$(find spark_navigation)/maps/ttb_house.yaml"/>
    <arg name="move_forward_only" default="false"/>
  
    <!-- ################### MAPPING ################### -->

    <node pkg="slam_toolbox" type="async_slam_toolbox_node" name="slam_toolbox" output="screen">
        <rosparam command="load" file="$(find spark_slam)/config/mapper_params_online_async.yaml" />
      </node>
  
    <!-- ################### MOVEBASE ################### -->

    <include file="$(find spark_navigation)/launch/spark_move_base.launch">
      <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>
  
    <!-- ################### RVIZ ################### -->

    <arg default="$(find spark_description)/rviz/navigation.rviz" name="rvizconfig" />
    <node args="-d $(arg rvizconfig)" name="rviz" pkg="rviz" required="true" type="rviz" />

  </launch>