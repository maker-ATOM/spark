<launch>
    <arg name="map_file" default="$(find spark_navigation)/maps/ttb_house.yaml" />
    <arg name="move_forward_only" default="false" />

    <!-- ################### MAP SERVER ################### -->

    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" />

    <!-- ################### AMCL ################### -->

    <include file="$(find spark_navigation)/launch/spark_amcl.launch" />

    <!-- ################### MOVEBASE ################### -->

    <include file="$(find spark_navigation)/launch/spark_move_base.launch">
        <arg name="move_forward_only" value="$(arg move_forward_only)" />
    </include>

    <!-- ################### RVIZ ################### -->

    <arg default="$(find spark_description)/rviz/navigation.rviz" name="rvizconfig" />
    <node args="-d $(arg rvizconfig)" name="rviz" pkg="rviz" required="true" type="rviz" />

</launch>